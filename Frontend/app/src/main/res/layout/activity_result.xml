<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".Result"
    app:menu="@menu/menu_main"
    android:gravity="center">

    <!-- Username -->
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Username"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Training Time -->
    <TextView
        android:id="@+id/textViewTrainingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewUsername"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Training Time: 00:00:00"
        android:textSize="16sp" />

    <!-- Training Accuracy Percentages -->
    <TextView
        android:id="@+id/textViewAccuracy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTrainingTime"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Accuracy: 0%"
        android:textSize="16sp" />

    <!-- Counter -->
    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAccuracy"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Counter: 0"
        android:textSize="16sp" />

    <!-- Export Button -->
    <Button
        android:id="@+id/buttonExport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCounter"
        android:layout_marginTop="32dp"
        android:text="Show Fight Results" />

</RelativeLayout>
